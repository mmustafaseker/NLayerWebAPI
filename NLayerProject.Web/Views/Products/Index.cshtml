@model IEnumerable<ProductDto>
<h1>Ürünler</h1>
<a class="btn btn-success mb-1" asp-action="Create" asp-controller="Products">Yeni Ürün</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Stok</th>
            <th>Fiyat</th>
            <th>Kategorisi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Stok</td>
                <td>@item.Price</td>
                <td>@item.CategoryId</td>
                <td>
                    <a class="btn btn-info ml-2" asp-action="Update" asp-controller="Products" asp-route-id="@item.Id">Güncelle</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Products" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>