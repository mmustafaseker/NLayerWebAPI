@model IEnumerable<CategoryDTO>

    <h1>Kategoriler</h1>
    <a class="btn btn-success mb-1" asp-action="Create" asp-controller="Categories">Yeni Kategori</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-info ml-2" asp-action="Update" asp-controller="Categories" asp-route-id="@item.Id">Güncelle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Categories" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>